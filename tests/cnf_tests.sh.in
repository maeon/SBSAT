#!/bin/sh

echo ===========================================
echo Checking longer benchmarks
echo you may interrupt it any time
echo All SAT
echo ===========================================

for i in @top_srcdir@/tests/cnf/*.cnf
do
 echo -n "`basename $i` ... "
 PARAMS=
 if [ -f $i.params ] ; then
   PARAMS=`cat $i.params`
 fi
 ../src/ite --debug 0 --ini @top_srcdir@/tests/emptyite.ini --ctrl-c 0 $i $PARAMS
 if [ $? != 0 ] ; then
    exit 1;
 fi
done

echo ===========================================
echo Done - Sucess
echo ===========================================

exit 0

